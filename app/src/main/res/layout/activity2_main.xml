                android:text="0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/product7"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_column="0"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:layout_row="3"
            android:layout_margin="25sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 7"
                />
            <TextView
                android:id="@+id/count7"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/product8"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25sp"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 8"
                />
            <TextView
                android:id="@+id/count8"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/product9"
            android:layout_width="wrap_content"
            android:layout_margin="25sp"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 9"
                />
            <TextView
                android:id="@+id/count9"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>


    </GridLayout>
    <Button
        android:id="@+id/btnshare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"/>

</LinearLayout>