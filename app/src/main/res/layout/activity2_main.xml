<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Factura" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/act2_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario: "/>
        <TextView
            android:id="@+id/act2_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario: "/>
        <TextView
            android:id="@+id/act2_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de productos: "/>

        <TextView
            android:layout_marginTop="10sp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Detalle de productos"/>
    </LinearLayout>





    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:id="@+id/product1"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:layout_margin="30sp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 1"
                />
            <TextView
                android:id="@+id/count1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/product2"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25sp"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 2"
                />
            <TextView
                android:id="@+id/count2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/product3"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_column="2"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:layout_row="1"
            android:layout_margin="25sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 3"
                />
            <TextView
                android:id="@+id/count3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/product4"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25sp"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producto 4"
                />
            <TextView
                android:id="@+id/count4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/product5"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_margin="25sp"
            android:padding="5sp"
            android:background="@color/colorPrimary"
            android:layout_row="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
